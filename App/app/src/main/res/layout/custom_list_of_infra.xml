<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:background="@drawable/image_style"
            android:id="@+id/imageViewInfra"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="27dp"
            android:layout_marginStart="40dp"
            tools:srcCompat="@tools:sample/avatars"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:theme="@style/names"
                android:id="@+id/infra_name"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="50dp"

                android:layout_marginTop="27dp"
                android:text="Infra Name" />

            <TextView
                android:theme="@style/description"
                android:id="@+id/infra_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="50dp"

                android:layout_marginTop="5dp"
                android:text="infra" />



        </LinearLayout>




    </LinearLayout>
</LinearLayout>
