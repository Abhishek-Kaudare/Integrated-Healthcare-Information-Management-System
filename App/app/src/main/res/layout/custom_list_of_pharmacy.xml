<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:background="@drawable/image_style"
            android:id="@+id/imagePharmacyView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="27dp"
            android:layout_marginStart="40dp"
            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:theme="@style/names"
                android:id="@+id/pharmacy_name"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="50dp"

                android:layout_marginTop="27dp"
                android:text="@string/name" />

            <TextView
                android:theme="@style/description"
                android:id="@+id/pharmacy_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="50dp"

                android:layout_marginTop="5dp"
                android:text="@string/description" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:theme="@style/doctor_address"
                    android:id="@+id/pharmacy_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="35dp"
                    android:drawableLeft="@drawable/ic_add_location_black_24dp"
                    android:layout_marginTop="5dp"
                    android:text="City" />
                <TextView
                    android:theme="@style/doctor_address"
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="State" />
            </LinearLayout>

            <TextView
                android:theme="@style/doctor_address"
                android:id="@+id/pincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:text="@string/address" />

        </LinearLayout>
     <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:drawableLeft="@drawable/ic_near_me_black_24dp"
                android:id="@+id/distance_of_pharmacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="3dp"
                android:text="@string/distance"/>

            <TextView
                android:theme="@style/rating"
                android:id="@+id/rating_of_pharmacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="10dp"
                android:drawableLeft="@drawable/ic_star_border_black_24dp"
                android:text="4.5"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>