<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Style for "rectangle_" -->
    <!-- Add this snippet to layer-list xml in drawable. -->
    <item android:width="303dp" android:height="41dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ff5fe5bc" />
            <corners android:radius="4dp" />

            <item android:name="android:shadowColor">#1c5fe5bc</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">3</item>

        </shape>
    </item>
</selector>